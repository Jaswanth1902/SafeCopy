# Backend Environment Configuration
# Secure File Printing System

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost

# Database Configuration
# If you have Postgres installed locally, update these:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/secure_print
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_print
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
# IMPORTANT: Replace these with strong random secrets in production
JWT_SECRET=dev_jwt_secret_key_minimum_32_characters_long_safecopy123
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_key_minimum_32_characters_long_safecopy123
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Encryption
ENCRYPTION_KEY=dev_encryption_key_for_db_fields_32ch

# File Upload Configuration
MAX_FILE_SIZE=100mb
UPLOAD_DIR=./uploads
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,application/msword

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@secureprintapp.com

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Expiration (in hours)
FILE_EXPIRY_HOURS=24

# Security
SECURE_COOKIES=true
SAME_SITE=Strict

# Feature Flags
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_FILE_ENCRYPTION=true

# Application Settings
APP_NAME=SecurePrint
APP_VERSION=1.0.0
ADMIN_EMAIL=admin@secureprintapp.com
